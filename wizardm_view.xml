<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Definición del wizardm -->
    <record id="report_wizardm_view_form" model="ir.ui.view">
        <field name="name">report.wizardm.view.form</field>
        <field name="model">report.wizardm</field>
        <field name="arch" type="xml">
            <form string="Informe de Ventas">
                <sheet>
                   
                   
                   <footer>
                        <button name="action_search_salida" type="object" string="Generar Reporte" class="btn-primary" />
                        <button string="Cancelar" class="btn-secondary" special="cancel" />
                   </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Definición de la acción -->
    <record id="report_wizardm_action" model="ir.actions.act_window">
        <field name="name">Municipios</field>
        <field name="res_model">report.wizardm</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_wizardm_view_form" />
        <field name="target">new</field>
    </record>
	
	<!-- Definición del menú -->
    
        <menuitem
        id="report_menu_municipio"
        name="Municipios"
        action="report_wizardm_action"
        parent="menu_chequeo"
        sequence="4" />

</odoo>
