<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Definición del wanular -->
    <record id="beca_wanular_view_form" model="ir.ui.view">
        <field name="name">beca.wanular.view.form</field>
        <field name="model">beca.wanular</field>
        <field name="arch" type="xml">
            <form string="Informe de Ventas">
                <sheet>
                   
                   <separator string="Seleccione la Planilla" colspan="2" />
                   <group>
                        <field name="planilla_id" domain="[('state','!=', 'anulada')]"/>
                   </group>
                   <separator string="DATOS PERSONALES" colspan="2" />
                   <group col="3" colspan="3">
                        <group>
                              <field name="cedula_persona" />
                        </group>
                        <group>
                              <field name="apellido1_persona" />
                              <field name="apellido2_persona" />
                        </group>
                        <group>
                              <field name="nombre1_persona" />
                              <field name="nombre2_persona" />
                        </group>
                   </group>

                   <separator string="Seleccione el Motivo de Anulaciòn" colspan="2" />
                   <group col="3" colspan="3">
                        
                        <group>
                              <field name="anulada_id" />
                        </group>
                        
                   </group>
                   
                   <group col="3" colspan="3" attrs="{'invisible': [('anulada_id', '!=', '4')]}">
                        <separator string="OBSERVACIONES" colspan="2" />
                        <group>
                              <field name="note_anulada" />
                        </group>
                        
                   </group>

                   <footer>
                        <button name="action_anular" type="object" string="ANULAR PLANILLA" class="btn-danger" />
                        <!-- <button name="action_censado" type="object" string="COLOCAR EN CENSADO" class="btn-warning" /> -->
                        <button string="CANCELAR" class="btn-secondary" special="cancel" />
                   </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Definición de la acción -->
    <record id="beca_wanular_action" model="ir.actions.act_window">
        <field name="name">ANULAR PLANILLAS REGISTRADAS</field>
        <field name="res_model">beca.wanular</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="beca_wanular_view_form" />
        <field name="target">new</field>
    </record>
	
	<!-- Definición del menú -->
    <menuitem
        id="beca_menu_anular"
        name="Anular Planilla"
        groups="3par1_beca.group_admin,3par1_beca.group_analista"
        
        parent="3par1_beca.menu_principal_root"
        sequence="10" />

        <menuitem
        id="beca_menu_planilla"
        name="Anular Planillas Registradas"
        action="beca_wanular_action"
        parent="beca_menu_anular"
        sequence="1" />

</odoo>