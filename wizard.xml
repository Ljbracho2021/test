<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Definición del Wizard -->
    <record id="report_wizard_view_form" model="ir.ui.view">
        <field name="name">report.wizard.view.form</field>
        <field name="model">report.wizard</field>
        <field name="arch" type="xml">
            <form string="Informe de Ventas">
                <sheet>
                   
                   <separator string="Seleccione la Carrera" colspan="2" />
                   <group>
                        <field name="carrera_id" />
                   </group>
                   <footer>
                        <button name="action_search_salida" type="object" string="Generar Reporte" class="btn-primary" />
                        <button string="Cancelar" class="btn-secondary" special="cancel" />
                   </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Definición de la acción -->
    <record id="report_wizard_action" model="ir.actions.act_window">
        <field name="name">Listado de Solicitudes</field>
        <field name="res_model">report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="report_wizard_view_form" />
        <field name="target">new</field>
    </record>
	
	<!-- Definición del menú -->
    <menuitem
        id="report_menu"
        name="Informes"
        groups="3par1_beca.group_admin,3par1_beca.group_analista,3par1_beca.group_invitado"
        
        parent="3par1_beca.menu_principal_root"
        sequence="10" />

        <menuitem
        id="report_menu_general"
        name="Listado de Solicitudes"
        action="report_wizard_action"
        parent="report_menu"
        sequence="1" />

</odoo>
