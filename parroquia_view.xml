<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VISTA - LISTADO - TREE  -->
    <record id="view_parroquia_tree" model="ir.ui.view">
        <field name="name">beca.parroquia.tree</field>
        <field name="model">beca.parroquia</field>
        <field name="arch" type="xml">
            <tree sample="1">
                 <field name="name"/>
                 <field name="nombre"/>
            </tree>
        </field>
    </record>

    <record id="view_parroquia_filter" model="ir.ui.view">
        <field name="name">beca.parroquia.list.select</field>
        <field name="model">beca.parroquia</field>
        <field name="priority" eval="15" />
        <field name="arch" type="xml">
            <search string="Busqueda Unidad Producción">
                    <field name="nombre"/>
                    <field name="name"/>
            </search>
        </field>
    </record>

    <!-- VISTA - TARJETAS - KANBAN  -->
    <record id="view_parroquia_kanban" model="ir.ui.view">
        <field name="name">beca.parroquia.kanban</field>
        <field name="model">beca.parroquia</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="nombre"/>
 
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">

                                <div class="o_kanban_image mr-1">
                                    <field name="image" widget="image" class="oe_avatar"/>
                                </div>
 
                                <div class="oe_kanban_global_click">
                                     <div class="oe_kanban_record_top mb16">
                                        <div class="oe_kanban_record_headings mt4">
                                            <strong class="o_kanbam_record_title"> <span> <field name="nombre" /> </span> </strong>
                                            <field name="priority" widget="priority"/>
                                        </div>
                                     </div>
                                     <t t-if="record.nombre.value"></t>
                                     <div class="o_kanban_record_headings">
                                            <strong class="o_kanban_record_title"></strong>
                                     </div>
                                </div>

                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- VISTA - FORMULARIO  -->
    <record id="view_parroquia_form" model="ir.ui.view">
        <field name="name">beca.parroquia.form</field>
        <field name="model">beca.parroquia</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="parroquia">
 
                <sheet>
                    

                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h2>
                                <field name="name" readonly="1"/>
                        </h2>
                        <h2>
                            <div class="d-flex">
                                <field name="priority" widget="priority" class="mr-3"/>
                                <field class="o_text_overflow" name="nombre" placeholder="Ejemplo: Parroquia Libertador"/>
                            </div>
                        </h2>
                    </div>
                    
                    <separator string="Ubicaciòn" colspan="2" />
                    <group colspan="2" col="2">
                        <!-- <field name="estado_id"></field> -->
                        <!-- <field name="municipio_id" domain="[('estado_id','=', estado_id)]"></field> -->
                         <field name="municipio_id" ></field>
                    </group>
                    <group colspan="2" col="2">
                        <field name="cedula" widget="integer" digits="(8)"></field>
                    </group>

                    
                    <group string="Observaciones">
                        <field name="note" nolabel="1" ></field>
                    </group> 
                    
                    <notebook>
                        <page string="DATOS GENERALES" name="limite">
                            
                        </page>

                    </notebook>
    
                </sheet>

            </form>
        </field>
    </record>

    
    <!-- VISTA - ACTION - MENU  -->
    <record id="action_beca_parroquia" model="ir.actions.act_window">
        <field name="name">Parroquias</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">beca.parroquia</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera parroquia..!
            </p>
        </field>
    </record>

    <!-- VISTA - MENU  -->

    <menuitem id="menu_parroquia" 
                  name    ="Parroquias"
                  parent  ="menu_ubicacion" 
                  action  ="action_beca_parroquia"
                  sequence="4"/>

</odoo>