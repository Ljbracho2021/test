<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VISTA - LISTADO - TREE  -->
    <record id="view_indice_tree" model="ir.ui.view">
        <field name="name">beca.indice.tree</field>
        <field name="model">beca.indice</field>
        <field name="arch" type="xml">
            <tree sample="1">
           
                 <field name="numero"/>
                 <field name="cedula"/>
                 <field name="create_uid"/>
                 <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_indice_filter" model="ir.ui.view">
        <field name="name">beca.indice.list.select</field>
        <field name="model">beca.indice</field>
        <field name="priority" eval="15" />
        <field name="arch" type="xml">
            <search string="Busqueda Unidad ProducciÃ³n">
                
                 <field name="numero"/>
                 <field name="cedula"/>
                 
            </search>
        </field>
    </record>


    <!-- VISTA - FORMULARIO  -->
    <record id="view_indice_form" model="ir.ui.view">
        <field name="name">beca.indice.form</field>
        <field name="model">beca.indice</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="indice">
 
                <sheet>
                    

                   
                    
                    <group>
                        <field name="numero"/>
                    </group>
                    <group>
                       <field name="cedula"/>
                    </group>
                    
                    
                </sheet>

            </form>
        </field>
    </record>

    
    <!-- VISTA - ACTION - MENU  -->
    <record id="action_beca_indice" model="ir.actions.act_window">
        <field name="name">Monitor / Planilla</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">beca.indice</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer indice!
            </p>
        </field>
    </record>

    <!-- VISTA - MENU  -->

    <!-- <menuitem id="menu_registro" 
                  name="Registros"
                  parent="menu_situacional_root" 
                  sequence="1"/> -->

    <menuitem id="menu_indice" 
                  name="Planillas"
                  parent="menu_monitor" 
                  action="action_beca_indice"
                  sequence="1"/>

</odoo>