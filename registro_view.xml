<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- VISTA - LISTADO - TREE  -->
    <record id="view_registro_tree" model="ir.ui.view">
        <field name="name">beca.registro.tree</field>
        <field name="model">beca.registro</field>
        <field name="arch" type="xml">
            <tree sample="1">
                 <field name="cedula"/>
                 <field name="nombre"/>
                 <field name="modalidad"/>
                 <field name="condicion"/>
                 <field name="correo"/>
            </tree>
        </field>
    </record>

    

   

    <!-- VISTA - FORMULARIO  -->
    <record id="view_registro_form" model="ir.ui.view">
        <field name="name">beca.registro.form</field>
        <field name="model">beca.registro</field>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <form string="registro">
 
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <table class="table table-sm o_main_table" name="appointment">
                          <tr>
                               <td class="text-left" style="color:blue;"> <span class="fa fa-lg fa-sitemap"> </span> </td>
                               <td class="text-left" style="color:gray;"> <span > <strong>REGISTRO DE eMail</strong> </span> </td>
                                                          
                         </tr>
                                    
                        </table>
                    </div>

                    
                    <div class="oe_title">
                        <h2>
                                <field name="cedula" />
                        </h2>
                        <h2>
                            
                                
                                <field class="o_text_overflow" name="correo" placeholder="Ejemplo: registro Carabobo"/>
                            
                        </h2>
                    </div>
                    
                    
                </sheet>

            </form>
        </field>
    </record>

    
    <!-- VISTA - ACTION - MENU  -->
    <record id="action_beca_registro" model="ir.actions.act_window">
        <field name="name">Registro de eMails</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">beca.registro</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        
    </record>

    <!-- VISTA - MENU  -->


    <menuitem id="menu_registro" 
                  name="registro de eMails"
                  parent="menu_registro_email_root" 
                  action="action_beca_registro"
                  sequence="1"/>

</odoo>